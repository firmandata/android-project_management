<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/AppTheme.Base.DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.Base.ActionButton.OverFlow</item>
        <item name="actionMenuTextColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Base.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Base.ActionButton.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_overflow_24</item>
    </style>

</resources>
