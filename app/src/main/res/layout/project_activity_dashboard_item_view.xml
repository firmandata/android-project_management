<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="@dimen/gap_half">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/statusTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text=""/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/totalTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusTask"
        android:layout_alignLeft="@id/statusTask"
        android:layout_alignStart="@id/statusTask"
        android:layout_alignRight="@id/statusTask"
        android:layout_alignEnd="@id/statusTask"
        android:gravity="center"
        android:text=""/>

</RelativeLayout>