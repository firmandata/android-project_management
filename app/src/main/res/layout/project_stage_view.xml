<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/project_stage_detail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                layout="@layout/project_stage_detail_view" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/projectStageAssignmentListLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/project_stage_detail_view"
                android:layout_marginTop="@dimen/gap"
                android:layout_marginBottom="@dimen/gap_half"
                android:layout_marginLeft="@dimen/gap"
                android:layout_marginStart="@dimen/gap"
                android:layout_marginEnd="@dimen/gap"
                android:layout_marginRight="@dimen/gap"
                android:paddingBottom="@dimen/gap_half"
                android:background="@drawable/border_label"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:text="@string/project_stage_layout_project_stage_assignment_title" />

            <include
                android:id="@+id/project_stage_assignment_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/projectStageAssignmentListLabel"
                android:layout_marginLeft="@dimen/gap"
                android:layout_marginStart="@dimen/gap"
                android:layout_marginRight="@dimen/gap"
                android:layout_marginEnd="@dimen/gap"
                layout="@layout/project_stage_assignment_list_view" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/projectStageDocumentListLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/project_stage_assignment_list_view"
                android:layout_marginTop="@dimen/gap"
                android:layout_marginBottom="@dimen/gap_half"
                android:layout_marginLeft="@dimen/gap"
                android:layout_marginStart="@dimen/gap"
                android:layout_marginEnd="@dimen/gap"
                android:layout_marginRight="@dimen/gap"
                android:paddingBottom="@dimen/gap_half"
                android:background="@drawable/border_label"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:text="@string/project_stage_layout_project_stage_document_title" />

            <include
                android:id="@+id/project_stage_document_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/projectStageDocumentListLabel"
                android:layout_marginLeft="@dimen/gap"
                android:layout_marginStart="@dimen/gap"
                android:layout_marginRight="@dimen/gap"
                android:layout_marginEnd="@dimen/gap"
                layout="@layout/project_stage_document_list_view" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>